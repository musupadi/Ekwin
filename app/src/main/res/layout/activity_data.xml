<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="0.0000dp"
        android:layout_height="0.00001dp"
        android:id="@+id/tvDewasa2"/>
    <TextView
        android:layout_width="0.0000dp"
        android:layout_height="0.00001dp"
        android:id="@+id/tvRemaja2"/>
    <TextView
        android:layout_width="0.0000dp"
        android:layout_height="0.00001dp"
        android:id="@+id/tvTK2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorConcrete"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linearBack">
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_chevron_left_24" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tema"
                        android:gravity="center|left"
                        android:fontFamily="@font/gotham"
                        android:textStyle="bold"
                        android:textSize="@dimen/header_text"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pendeta"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvJumlahPendeta"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jumlah Pendeta\nLoading"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/agenda"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvJadwal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jumlah Jadwal\nLoading"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/materi"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvMateri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Jumlah Materi\nLoading"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/umur"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvJamaah"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jumlah jamaah\nLoading"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/graph"
                        android:layout_weight="2"
                        android:layout_margin="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Data Jamaah"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center|left"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Dewasa "/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1.5"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=" : "/>
                                <TextView
                                    android:id="@+id/tvDewasa"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Loading"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center|left"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Remaja "/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1.5"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=" : "/>
                                <TextView
                                    android:id="@+id/tvRemaja"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Loading"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center|left"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="TK "/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1.5"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=" : "/>
                                <TextView
                                    android:id="@+id/tvTK"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Loading"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>