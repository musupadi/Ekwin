<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ui.Home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Search"
                android:gravity="center|left"
                android:textSize="@dimen/header_text"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/gotham"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout"
                android:id="@+id/ivLogout"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Tema"
                android:fontFamily="@font/gotham"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerTema"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardStage1"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/linearNamaTema1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Tema"
                        android:id="@+id/tvNama"
                        android:fontFamily="@font/gotham"
                        android:textSize="@dimen/text_xtra_large"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearJadwal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Jadwal"
                android:fontFamily="@font/gotham"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_rounded_primary"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPagi"
                    android:layout_weight="1"
                    android:text="Pagi"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/gotham"/>
                <Button
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/colorWhite"
                    android:text="Siang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_rounded_primary"
                    android:layout_margin="10dp"
                    android:id="@+id/btnSiang"
                    android:layout_weight="1"/>
                <Button
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/colorWhite"
                    android:text="Sore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_rounded_primary"
                    android:layout_margin="10dp"
                    android:id="@+id/btnSore"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardStage2"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linearJadwal2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/colorPrimary">
                        <TextView
                            android:id="@+id/tvJadwal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Pagi"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/gotham"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/cardNamaTema2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Tema"
                        android:id="@+id/tvNamaTema"
                        android:fontFamily="@font/gotham"
                        android:textSize="@dimen/text_xtra_large"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardPendeta"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textStyle="bold"
                        android:id="@+id/tvNamaPendeta"
                        android:fontFamily="@font/gotham"
                        android:textSize="@dimen/text_xtra_large"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aktif"
                        android:id="@+id/tvStatus"
                        android:fontFamily="@font/gotham"
                        android:textSize="@dimen/text_smoll"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearPendeta">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Pendeta"
                android:fontFamily="@font/gotham"
                android:textSize="@dimen/text_large"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerPendeta"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/tvIdTema"
            android:layout_width="0.000001dp"
            android:layout_height="0.00001dp"
            android:text="ID"/>
        <TextView
            android:id="@+id/tvIdPendeta"
            android:layout_width="0.000001dp"
            android:layout_height="0.00001dp"
            android:text="ID"/>
    </LinearLayout>

</FrameLayout>